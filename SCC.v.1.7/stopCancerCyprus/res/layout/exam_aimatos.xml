<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"  >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/examAimatosView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffcc66"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:editable="FALSE"
                    android:text="Εξέταση αίματος\n"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aima"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    />
            </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/KarkinosEnterouView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" •γενική αίματος\n •μεταβολικός έλεγχος\n •ηπατικές δοκιμασίες\n •εξετάσεις νεφρικής λειτουργίας\n •εξετάσεις θυρεοειδούς\n " />

            </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/KarkinosMastosView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Οι εξετάσεις αίματος συμβάλουν: "
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                   /> </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/KarkinosEnterouView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" •Στην έγκαιρη διάγνωση του μεταστατικού μελανώματος.\n •Χρησιμοποιώντας εξέταση αίματος, υπάρχει η βάση ενός απλού και ακριβούς τρόπου να ανακαλυφθεί πόσο προχωρημένη είναι η νόσος, καθώς και έγκαιρη προειδοποίηση σχετικά με το αν έχει αρχίσει να εξαπλώνεται.\n •Στην έγκαιρη διάγνωση του καρκίνου στο πάγκρεας"
                    />
            </LinearLayout>
           
               
            </LinearLayout>
    </ScrollView>

</LinearLayout>
