<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/KarkinosaskisiMastosView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:editable="FALSE"
                    android:text="Καρκίνος του παχέος εντέρου και διατροφή "
                    android:textStyle="bold"
                    android:textSize="16dp" 
                    android:background="#ddfac0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/KarkinosaskisiMastosView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Οι διατροφικές συνήθειες αποτελούν έναν από τους σημαντικότερους περιβαλλοντικούς παράγοντες, που εμπλέκονται στην εμφάνιση του καρκίνου του παχέος εντέρου." />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/KarkinosaskisiMastosView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Πιο αναλυτικά:"
                    android:textStyle="bold"
                   /> </LinearLayout>
	<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/KarkinosaskisiMastosView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Η μεγάλη πρόσληψη φρούτων και λαχανικών συνοδεύεται από μειωμένο κίνδυνο εμφάνισης καρκίνου παχέος εντέρου." />
            </LinearLayout>
    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center" >

                  <ImageView
                      android:id="@+id/img"
                      android:layout_width="359dp"
                      android:layout_height="142dp"
                      android:layout_gravity="center"
                      android:focusable="true"
                      android:focusableInTouchMode="true"
                      android:src="@drawable/diatrofi3" />
                
            </LinearLayout> 
	
	
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/KarkinosaskisiMastosView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Το ελαιόλαδο σχετίζεται με μειωμένο κίνδυνο εμφάνισης καρκίνου παχέος εντέρου: οι αντικαρκινικές του ιδιότητες αποδίδονται στην υψηλή περιεκτικότητα του σε μονοακόρεστα λιπαρά οξέα, φαινόλες και τοκοφερόλες. " />
            </LinearLayout>
            
              
	
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/KarkinosaskisiMastosView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Η κατανάλωση καφέ θεωρείται ότι ούτε προστατεύει ούτε προδιαθέτει σε εμφάνιση καρκίνου του παχέος εντέρου.\n- Αρκετές μελέτες έχουν διαπιστώσει υψηλότερο κίνδυνο εμφάνισης καρκίνου του παχέος εντέρου με την αυξημένη κατανάλωση αλκοόλ, ιδίως μεταξύ των ανδρών." />
            </LinearLayout>
            
              
        </LinearLayout>
    </ScrollView>

</LinearLayout>