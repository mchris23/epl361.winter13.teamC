<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"  >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/KarkinosOrxeonView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:editable="FALSE"
                    android:text="Τι είναι ένα τεστ Παπανικολάου;"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:background="#ddfac0"  />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/KarkinosOrxeonView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Είναι ένα τεστ ανίχνευσης που χρησιμοποιείται στη γυναικολογία να ανιχνεύσει προκαρκινικές διεργασίες.\nΣημαντικές αλλαγές μπορούν να αντιμετωπιστούν, αποτρέποντας έτσι τον καρκίνο του τραχήλου.\n"
                    />
            </LinearLayout>
            
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/KarkinosOrxeonView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/papTest"
                    android:textColor="@color/blue" />

            </LinearLayout>
            
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/KarkinosOrxeonView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" -Mία φορά τον χρόνο έως την ηλικία των 65 ετών."/>
            </LinearLayout>
            
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/KarkinosOrxeonView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-Mετά τα 65 πρέπει να γίνεται ανά 2 έως 3 έτη."
                    />
            </LinearLayout>
            
               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/KarkinosOrxeonView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*Η εγκυμοσύνη δεν αποτελεί αντένδειξη για το τεστ Παπ, συνεπώς μπορεί με ασφάλεια να γίνει ακόμα και σε μία έγκυο.\n"
                    />
            </LinearLayout>
            
                   <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center" >

                  <ImageView
                      android:id="@+id/img"
                      android:layout_width="359dp"
                      android:layout_height="142dp"
                      android:layout_gravity="center"
                      android:focusable="true"
                      android:focusableInTouchMode="true"
                      android:src="@drawable/pap_test" />
                
            </LinearLayout>
            </LinearLayout>
    </ScrollView>

</LinearLayout>
