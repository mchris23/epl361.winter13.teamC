<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="20dp">
   
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

     <EditText
         android:id="@+id/instructionText"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:clickable="false"
         android:cursorVisible="false"
         android:editable="FALSE"
         android:ems="10"
         android:focusable="false"
         android:focusableInTouchMode="false"
         android:text="Επέλεξε τη πληροφορία που επιθυμείς να δείς:"
         android:textSize="16dp"
         android:textStyle="bold"
         android:paddingBottom="30dp"/>

        </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <!-- examination choice -->
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:paddingBottom="20dp" >
        <EditText
            android:id="@+id/examinationText"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:clickable="false"
            android:cursorVisible="false"
            android:editable="FALSE"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Εξετάσεις:"
            android:textSize="16dp"/>

        <requestFocus />

        <Button
            android:id="@+id/Bexam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="Επιλογή" />
        </LinearLayout>
        
       <!-- activity choice -->
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:paddingBottom="20dp" >
        <EditText
            android:id="@+id/activitiesText"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:clickable="false"
            android:cursorVisible="false"
            android:editable="FALSE"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Ασκήσεις:"
            android:textSize="16dp"/>

        <requestFocus />

        <Button
            android:id="@+id/Bactiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="Επιλογή" />
        </LinearLayout>
       
       <!-- diet choice -->
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:paddingBottom="20dp">
        <EditText
            android:id="@+id/dietText"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:clickable="false"
            android:cursorVisible="false"
            android:editable="FALSE"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Διατροφή:"
            android:textSize="16dp"/>

        <requestFocus />

        <Button
            android:id="@+id/Bdiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="Επιλογή" />
        </LinearLayout>
        
       </LinearLayout>
    </ScrollView>

</LinearLayout>
